<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.useraccount.UserAccountFragment">

  <EditText
    android:id="@+id/usernameEditText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/user_account_fragment_username_edittext_margin"
    android:ems="10"
    android:hint="@string/user_account_fragment_username_hint"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

  <EditText
    android:id="@+id/passwordEditText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/user_account_fragment_password_edittext_margin"
    android:layout_marginTop="@dimen/user_account_fragment_password_edittext_margin_top"
    android:ems="10"
    android:hint="@string/user_account_fragment_password_hint"
    android:inputType="textPassword"
    app:layout_constraintBottom_toTopOf="@+id/submitButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/usernameEditText" />

  <Button
    android:id="@+id/submitButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/user_account_fragment_submit_button_margin"
    android:layout_marginTop="@dimen/user_account_fragment_submit_button_margin_top"
    android:text="@string/user_account_fragment_button_create_account_text"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

  <ImageView
    android:id="@+id/backImageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/user_account_fragment_back_icon_margin_start"
    android:layout_marginTop="@dimen/user_account_fragment_back_icon_margin_top"
    android:src="@drawable/ic_back_arrow"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>