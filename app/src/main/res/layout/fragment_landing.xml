<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.landing.LandingFragment">

  <Button
    android:id="@+id/newAccountButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/landing_fragment_new_account_button_margin_end"
    android:layout_marginLeft="@dimen/landing_fragment_new_account_button_margin_left"
    android:layout_marginRight="@dimen/landing_fragment_new_account_button_margin_right"
    android:layout_marginStart="@dimen/landing_fragment_new_account_button_margin_start"
    android:layout_marginTop="@dimen/landing_fragment_new_account_button_margin_top"
    android:text="@string/landing_fragment_new_account_button_text"
    app:layout_constraintBottom_toTopOf="@+id/signInButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

  <Button
    android:id="@+id/signInButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/landing_fragment_sign_in_button_margin_end"
    android:layout_marginLeft="@dimen/landing_fragment_sign_in_button_margin_left"
    android:layout_marginRight="@dimen/landing_fragment_sign_in_button_margin_right"
    android:layout_marginStart="@dimen/landing_fragment_sign_in_button_margin_start"
    android:layout_marginTop="@dimen/landing_fragment_sign_in_button_margin_top"
    android:text="@string/landing_fragment_sign_in_button_text"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/newAccountButton" />

</androidx.constraintlayout.widget.ConstraintLayout>